{
    "name": "Agentic Index Dev Container",
    "build": {"dockerfile": "Dockerfile"},
    "postCreateCommand": "/usr/local/bin/setup-env.sh",
    "forwardPorts": [8000],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-pytest.pytest",
                "redhat.vscode-yaml",
            ],
            "workspaceCommands": [
                {"name": "Run Tests", "command": "pytest -q"},
                {"name": "Run Scrape", "command": "python scripts/scrape.py"},
            ],
        }
    },
}
